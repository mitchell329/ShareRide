<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.android.shareride"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".View.HomeActivity"
            android:label="@string/action_home"/>
        <activity android:name=".View.PostRideActivity">
        </activity>
        <activity android:name=".View.FindRideActivity">
        </activity>
        <activity
            android:name=".View.ProfileActivity"
            android:label="@string/action_profile">
        </activity>
        <activity android:name=".View.TripDetailActivity">
        </activity>
    </application>

</manifest>
